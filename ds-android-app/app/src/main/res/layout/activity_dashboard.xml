<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/charcoal_dark">
    
    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/charcoal_dark"
        android:elevation="4dp"
        android:paddingTop="24dp"
        android:paddingBottom="20dp"
        android:gravity="center">
        
        <ImageView
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:src="@drawable/doublespeed_logo"
            android:scaleType="fitCenter"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="System Tools"
            android:textColor="@color/text_secondary"
            android:textSize="13sp"
            android:layout_marginTop="8dp"
            android:letterSpacing="0.05"/>
    </LinearLayout>
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@color/charcoal_dark">
        
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="@color/charcoal_dark">
            
            <!-- Tools Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">
                
                <!-- Proxy Tool -->
                <LinearLayout
                    android:id="@+id/tool_proxy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/edit_text_glass"
                    android:padding="20dp"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">
                    
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_connection_checking"
                        android:layout_marginBottom="12dp"/>
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Proxy Manager"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"/>
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SOCKS5 VPN configuration"
                        android:textColor="@color/text_secondary"
                        android:textSize="11sp"/>
                </LinearLayout>
                
                <!-- Clipboard Tool -->
                <LinearLayout
                    android:id="@+id/tool_clipboard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/edit_text_glass"
                    android:padding="20dp"
                    android:layout_marginStart="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">
                    
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_clipboard"
                        android:layout_marginBottom="12dp"/>
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Clipboard"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"/>
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manage clipboard history"
                        android:textColor="@color/text_secondary"
                        android:textSize="11sp"/>
                </LinearLayout>
            </LinearLayout>
            
            <!-- More Tools -->
            <LinearLayout
                android:id="@+id/tool_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/edit_text_glass"
                android:padding="20dp"
                android:layout_marginBottom="24dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:alpha="0.5">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_more"
                        android:layout_marginEnd="16dp"/>
                    
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="More Tools"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp"/>
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Coming soon"
                            android:textColor="@color/text_secondary"
                            android:textSize="11sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            
            <!-- Device Information Separator -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_dark"
                android:layout_marginBottom="20dp"/>
            
            <!-- DEVICE OVERVIEW -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DEVICE OVERVIEW"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:letterSpacing="0.1"
                android:layout_marginBottom="12dp"/>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/edit_text_glass"
                android:padding="16dp"
                android:layout_marginBottom="20dp">
                
                <!-- Model -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Model"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/device_model"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"/>
                </LinearLayout>
                
                <!-- Manufacturer -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Manufacturer"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/device_manufacturer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"/>
                </LinearLayout>
                
                <!-- Serial Number -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Serial Number"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/device_serial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"
                        android:fontFamily="monospace"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@drawable/selectable_item_background_small"
                        android:padding="4dp"/>
                </LinearLayout>
                
                <!-- Android Version -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Android Version"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/android_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>
            
            <!-- SYSTEM INFORMATION -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SYSTEM INFORMATION"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:letterSpacing="0.1"
                android:layout_marginBottom="12dp"/>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/edit_text_glass"
                android:padding="16dp"
                android:layout_marginBottom="20dp">
                
                <!-- SDK Version -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="SDK Version"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/sdk_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"/>
                </LinearLayout>
                
                <!-- Security Patch -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Security Patch"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/security_patch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"/>
                </LinearLayout>
                
                <!-- Build Number -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Build Number"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/build_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@drawable/selectable_item_background_small"
                        android:padding="4dp"/>
                </LinearLayout>
                
                <!-- Bootloader -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Bootloader"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/bootloader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>
            
            <!-- HARDWARE INFORMATION -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HARDWARE INFORMATION"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:letterSpacing="0.1"
                android:layout_marginBottom="12dp"/>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/edit_text_glass"
                android:padding="16dp"
                android:layout_marginBottom="20dp">
                
                <!-- Processor -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Processor"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/processor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"/>
                </LinearLayout>
                
                <!-- CPU Cores -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="CPU Cores"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/cpu_cores"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"/>
                </LinearLayout>
                
                <!-- RAM -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="RAM"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/ram_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"/>
                </LinearLayout>
                
                <!-- Storage -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Storage"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/storage_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>
            
            <!-- NETWORK INFORMATION -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NETWORK INFORMATION"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:letterSpacing="0.1"
                android:layout_marginBottom="12dp"/>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/edit_text_glass"
                android:padding="16dp"
                android:layout_marginBottom="20dp">
                
                <!-- IP Address -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="IP Address"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/ip_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"
                        android:fontFamily="monospace"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@drawable/selectable_item_background_small"
                        android:padding="4dp"/>
                </LinearLayout>
                
                <!-- MAC Address -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="MAC Address"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/mac_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"/>
                </LinearLayout>
                
                <!-- Network Status -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Network"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/network_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"/>
                </LinearLayout>
                
                <!-- Separator within Network box -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="@color/divider_color"/>
                
                <!-- Proxy Status -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Proxy Status"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/proxy_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"
                        android:textStyle="bold"/>
                </LinearLayout>
                
                <!-- Proxy Type -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Proxy Type"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/proxy_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"/>
                </LinearLayout>
                
                <!-- Proxy Host -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Proxy Host"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/proxy_host"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>
            
            <!-- DISPLAY INFORMATION -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DISPLAY INFORMATION"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:letterSpacing="0.1"
                android:layout_marginBottom="12dp"/>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/edit_text_glass"
                android:padding="16dp">
                
                <!-- Resolution -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Resolution"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/screen_resolution"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"/>
                </LinearLayout>
                
                <!-- Density -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Density"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/screen_density"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"/>
                </LinearLayout>
                
                <!-- Screen Size -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Screen Size"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/screen_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>
            
        </LinearLayout>
    </ScrollView>
</LinearLayout>