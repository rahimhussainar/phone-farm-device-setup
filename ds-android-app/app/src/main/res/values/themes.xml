<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Modern Dark Theme -->
    <style name="AppTheme" parent="android:Theme.Material.NoActionBar">
        <!-- Primary brand color -->
        <item name="android:colorPrimary">@color/charcoal</item>
        <item name="android:colorPrimaryDark">@color/charcoal_dark</item>
        <item name="android:colorAccent">@color/off_white</item>
        
        <!-- Window background -->
        <item name="android:windowBackground">@color/background_primary</item>
        <item name="android:colorBackground">@color/background_primary</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/charcoal_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/charcoal_dark</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <!-- Text appearance -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        
        <!-- Control colors -->
        <item name="android:colorControlNormal">@color/gray_medium</item>
        <item name="android:colorControlActivated">@color/off_white</item>
        <item name="android:colorControlHighlight">@color/gray_dark</item>
    </style>
    
    <!-- Custom EditText Style -->
    <style name="ModernEditText">
        <item name="android:background">@drawable/edit_text_glass</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:textSize">14sp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    
    <!-- Custom Button Style -->
    <style name="ModernButton">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/charcoal</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:minHeight">42dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <!-- Outline Button Style -->
    <style name="OutlineButton">
        <item name="android:background">@drawable/button_outline</item>
        <item name="android:textColor">@color/off_white</item>
        <item name="android:textSize">13sp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:minHeight">42dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <!-- Checkbox Style -->
    <style name="ModernCheckBox">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:buttonTint">@color/off_white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    
    <!-- Splash Screen Theme -->
    <style name="SplashTheme" parent="android:Theme.Material.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:statusBarColor">@color/charcoal_dark</item>
        <item name="android:navigationBarColor">@color/charcoal_dark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>
</resources>